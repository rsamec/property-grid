nestingWidth = 15px
propertyPadding = 10px
borderColor = gray

.property-grid

    textarea
    input
    select
        outline none
    .property
        .name
        .value
            height itemHeight
            vertical-align middle
            border-top 1px solid borderColor

    //make the first property have no border-top
    .root > .property
        .name
        .value
            border-top 0px

    .name
        background rgb(210, 215, 255)
        @extend .u-ellipsis
        white-space nowrap

    .value
        border-left 1px solid borderColor
        .editor[readonly]
            background #D9D9D9

    .name
    .editor
        padding-left propertyPadding
        padding-right propertyPadding

    .editor
        border 0px

    for num in (1..10)
        .property.depth-{num}
            .name
                padding-left propertyPadding + nestingWidth * (num + 1)
        .property-composite.depth-{num}
            .name
                padding-left propertyPadding + nestingWidth * num